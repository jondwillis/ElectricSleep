<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.androsz.electricsleep" android:versionCode="1"
	android:versionName="0.1">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".ui.HomeActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ui.SleepActivity" android:label="@string/title_sleep">

		</activity>
		<activity android:name=".ui.CalibrationWizardActivity"
			android:label="@string/title_calibrate">
		</activity>
		<activity android:name=".ui.AlarmsActivity" android:label="@string/title_alarms">
		</activity>
		<activity android:name=".ui.SettingsActivity" android:label="@string/title_settings">
		</activity>
		<activity android:name=".ui.HistoryActivity" android:label="@string/title_history">
		</activity>
		<activity android:name=".ui.CloudActivity" android:label="@string/title_cloud">
		</activity>

		<activity android:name=".ui.CalibrateForResultActivity"
			android:label="@string/calibrating" android:theme="@android:style/Theme.Dialog">
		</activity>
		<activity android:name=".ui.ReviewSleepActivity">
		</activity>

		<service android:name=".service.SleepAccelerometerService"
			android:icon="@drawable/icon" android:label="@string/app_name">
		</service>
		
		<provider android:name=".db.SleepContentProvider"
			android:authorities="com.androsz.electricsleep.db.sleepcontentprovider"></provider>

	</application>
	<uses-sdk android:minSdkVersion="8" />


	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
</manifest> 